# ===== GROOMLY - CONFIGURAÇÕES =====

# Ambiente (development, staging, production)
FLASK_ENV=development

# Aplicação
SECRET_KEY=groomly_2025_secret_key_change_me
HOST=0.0.0.0
PORT=5001

# Banco de Dados
# Formato: usuario@host:porta@senha@nome_banco
DATABASE_URL=root@localhost:3306@sua_senha@groomly

# Email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_app
MAIL_DEFAULT_SENDER=noreply@groomly.com

# Redis (opcional - para cache e rate limiting em produção)
REDIS_URL=redis://localhost:6379/0

# IA & ML
AI_MIN_APPOINTMENTS=3
AI_CONFIDENCE_THRESHOLD=0.7

# Validação
EMAIL_VALIDATION_STRICT=true
PHONE_COUNTRY_CODE=BR

# Segurança
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100 per hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Features (true/false)
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_CHAT=true
FEATURE_NOTIFICATIONS=true
FEATURE_REVIEWS=true
FEATURE_ANALYTICS=true
